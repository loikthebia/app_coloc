<!DOCTYPE html>
<html>
  <head>
    <title><%= titre %></title>
    <%= csrf_meta_tag %>
    <%= render partial: 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render partial: 'layouts/header' %>
      <section class="round">
        <% if notice %>
        <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert %>
        <p class="alert"><%= alert %></p>
        <% end %>
        <%= yield %>
      </section>
      <%= render partial: 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>